<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <!-- Title + Timer row -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ¦ž Jarvis"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/text_secondary"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/titleText" />

    <!-- Settings gear -->
    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_manage"
        android:contentDescription="Settings"
        app:tint="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:layout_marginTop="8dp" />

    <!-- Status -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsBtn"
        android:layout_marginTop="8dp" />

    <!-- Call Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/callBtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="ðŸ“ž Call Jarvis"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:gravity="center"
        app:backgroundTint="@color/call_green"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        android:layout_marginTop="24dp" />

    <!-- VAD Slider section -->
    <TextView
        android:id="@+id/vadLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silence Detection"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/callBtn"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/vadValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.0s"
        android:textColor="@color/text_primary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/vadLabel" />

    <com.google.android.material.slider.Slider
        android:id="@+id/vadSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0.5"
        android:valueTo="15.0"
        android:stepSize="0.5"
        android:value="2.0"
        app:trackColorActive="@color/call_green"
        app:thumbColor="@color/call_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vadLabel"
        android:layout_marginTop="0dp" />

    <!-- Transcript area -->
    <TextView
        android:id="@+id/transcriptLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transcript"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vadSlider"
        android:layout_marginTop="8dp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/transcriptScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transcriptLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        android:background="@color/surface_dark"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/transcriptContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
