# Server
HOST=0.0.0.0
PORT=<your-port>
SSL_CERT=/path/to/your/cert.crt
SSL_KEY=/path/to/your/key.key

# OpenClaw Integration
OPENCLAW_URL=<your-openclaw-url>
OPENCLAW_TOKEN=<your-gateway-token>

# Whisper STT
WHISPER_MODEL=tiny

# Voice Activity Detection
VAD_STOP_SECS=0.6

# Call Limits
MAX_CALL_DURATION_MIN=30
